# Find include file & library:
IF (UNIX)
	find_path(GETTEXT_INCLUDE_DIR libintl.h)
ELSEIF (WIN32)
	set(GETTEXT_INCLUDE_DIR ${CMAKE_SOURCE_DIR}/include/)
	set(GETTEXT_LIBRARIES ${CMAKE_SOURCE_DIR}/gettext.dll)
ENDIF (UNIX)
# Set success status:
IF (UNIX AND GETTEXT_INCLUDE_DIR)
	set(GETTEXT_FOUND "YES")
ELSEIF (WIN32 AND GETTEXT_LIBRARIES AND GETTEXT_INCLUDE_DIR)
	set(GETTEXT_FOUND "YES")
ELSE (UNIX AND GETTEXT_INCLUDE_DIR)
	set(GETTEXT_FOUND "NO")
ENDIF (UNIX AND GETTEXT_INCLUDE_DIR)

IF (GETTEXT_FOUND)
	IF (NOT GETTEXT_FIND_QUIETLY)
		IF (UNIX)
			message(STATUS "Found gettext")
		ELSE (UNIX)
			message(STATUS "Found gettext: ${GETTEXT_LIBRARIES}")
		ENDIF (UNIX)
	ENDIF (NOT GETTEXT_FIND_QUIETLY)
ELSE (GETTEXT_FOUND)
	IF (GETTEXT_FIND_REQUIRED)
		message(FATAL_ERROR "Could not find gettext library")
	ENDIF (GETTEXT_FIND_REQUIRED)
ENDIF (GETTEXT_FOUND)

mark_as_advanced(GETTEXT_LIBRARIES GETTEXT_INCLUDE_DIR)
