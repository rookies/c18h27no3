# Find include file & library:
IF (UNIX)
	find_path(LIBINTL_INCLUDE_DIR libintl.h)
ELSEIF (WIN32)
	set(LIBINTL_INCLUDE_DIR ${CMAKE_SOURCE_DIR}/include/)
	set(LIBINTL_LIBRARIES ${CMAKE_SOURCE_DIR}/libintl.dll)
ENDIF (UNIX)
# Set success status:
IF (UNIX AND LIBINTL_INCLUDE_DIR)
	set(LIBINTL_FOUND "YES")
ELSEIF (WIN32 AND LIBINTL_LIBRARIES AND LIBINTL_INCLUDE_DIR)
	set(LIBINTL_FOUND "YES")
ELSE (UNIX AND LIBINTL_INCLUDE_DIR)
	set(LIBINTL_FOUND "NO")
ENDIF (UNIX AND LIBINTL_INCLUDE_DIR)

IF (LIBINTL_FOUND)
	IF (NOT LIBINTL_FIND_QUIETLY)
		IF (UNIX)
			message(STATUS "Found LibIntl")
		ELSE (UNIX)
			message(STATUS "Found LibIntl: ${LIBINTL_LIBRARIES}")
		ENDIF (UNIX)
	ENDIF (NOT LIBINTL_FIND_QUIETLY)
ELSE (LIBINTL_FOUND)
	IF (LIBINTL_FIND_REQUIRED)
		message(FATAL_ERROR "Could not find LibIntl library")
	ENDIF (LIBINTL_FIND_REQUIRED)
ENDIF (LIBINTL_FOUND)

mark_as_advanced(LIBINTL_LIBRARIES LIBINTL_INCLUDE_DIR)
