#ifndef _globals_hpp_
#	define _globals_hpp_
	
	/*
	 * === THINGS DEFINED BY CMake ===
	 * Game version:
	*/
#	define VERSION_MAJOR @GAME_VERSION_MAJOR@
#	define VERSION_MINOR @GAME_VERSION_MINOR@
#	define VERSION @GAME_VERSION_MAJOR@.@GAME_VERSION_MINOR@
	/*
	 * === FUNCTION DEFINITIONS ===
	*/
#	define _(String) gettext(String)
	/*
	 * === OTHER CONFIGURATION VARIABLES ===
	 * Cursor dimensions:
	*/
#	define CURSOR_WIDTH 16
#	define CURSOR_HEIGHT 16
	/*
	 * Configuration variable count:
	*/
#	define CONFIGVAR_COUNT 4 /* number of the configuration variables */
#	define CONFIGVAR_LANGUAGE_COUNT 2 /* number of the languages for settings_general_menu */
	/*
	 * Colors:
	*/
#	define COLOR_MENU_ELEMENT sf::Color(73, 186, 29) /* color of an menu element */
#	define COLOR_MENU_ELEMENT_HOVER sf::Color(115, 228, 71) /* color of an menu element in hover status */
	/*
	 * Sizes (in percent):
	*/
#	define SIZE_MENU_ELEMENT_WIDTH 30.0 /* width of an element */
#	define SIZE_MENU_ELEMENT_HEIGHT 5.0 /* height of an element */
#	define SIZE_MENU_ELEMENT_OUTLINE 0.5 /* outline of an element */
#	define SIZE_MENU_FIRST_ELEMENT_YOFFSET 45.0 /* Y offset of the first element */
#	define SIZE_SETTINGS_SUBMENUS_FIRST_ELEMENT_YOFFSET 30.0 /* Y offset of the first element in the sub menus of the settings menu */
#	define SIZE_MENU_ELEMENT_GAP 2.0 /* gap between two elements */
#	define SIZE_MAINMENU_GRASSBLOCK_HEIGHT 30.0 /* height of the grass image in main menu */
#	define SIZE_MAINMENU_GRASSBLOCK_YOFFSET 10.0 /* Y offset of the grass image in main menu */
#	define SIZE_MENU_ELEMENT_TEXT_GAP 1.0 /* gap between top of the element and the top of the text */
#	define SIZE_SETTINGSMENU_CREEPER_HEIGHT 30.0 /* height of the creeper image in settings menu */
#	define SIZE_SETTINGSMENU_CREEPER_YOFFSET 10.0 /* Y offset of the creeper image in settings menu */
#	define SIZE_MENU_CONFIG_ELEMENT_HEIGHT 2*SIZE_MENU_ELEMENT_HEIGHT /* height of an config element */
#	define SIZE_MENU_CONFIG_ELEMENT_VALUE_GAP 5.0 /* gap between top of the config element and the top of the value text */
#	define SIZE_MENU_CONFIG_ARROW_HEIGHT 3.0 /* size of the config arrows */
#	define SIZE_MENU_CONFIG_ELEMENT_ARROW_YGAP 6.0 /* gap between top of the config element and the top of the arrows */
#	define SIZE_MENU_CONFIG_ELEMENT_ARROW_XGAP 1.0 /* gap between left of the config element and the left arrows */
	/*
	 * Size dividers:
	*/
#	define SIZE_MENU_ELEMENT_TEXT_SIZE_DIVIDER 2.0 /* divide element height by this value to get the text size */
#	define SIZE_MENU_CONFIG_ELEMENT_HEADER_SIZE_DIVIDER 2.0 /* divide element height by this value to get the config header text size */
#	define SIZE_MENU_CONFIG_ELEMENT_VALUE_SIZE_DIVIDER 2.2 /* divide element height by this value to get the config value text size */
#endif // _globals_hpp_
